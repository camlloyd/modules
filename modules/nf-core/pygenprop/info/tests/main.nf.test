nextflow_process {

    name "Test Process PYGENPROP_INFO"
    script "../main.nf"
    process "PYGENPROP_INFO"

    tag "modules"
    tag "modules_nfcore"
    tag "pygenprop"
    tag "pygenprop/info"
    tag "pygenprop/build"
    tag "aria2"
    tag "gunzip"

    setup {
        run("ARIA2") {
            script "../../../aria2/main.nf"
            process {
                """
                input[0] = [
                    [ id:'test_genprops' ],
                    params.modules_testdata_base_path + 'proteomics/interproscan/genomeProperties.txt.gz'
                ]
                """
            }
        }

        run("GUNZIP") {
            script "../../../gunzip/main.nf"
                process {
                """
                input[0] = ARIA2.out.downloaded_file
                """
            }
        }

        run("PYGENPROP_BUILD") {
            script "../../build/main.nf"
            process {
                """
                input[0] = channel.of([
                    [ id:'test' ],
                    file(params.modules_testdata_base_path + 'proteomics/interproscan/human_skin_metagenome_ips_result.tsv', checkIfExists: true)
                ])
                input[1] = GUNZIP.out.gunzip.map{ it -> it[1] }
                """
            }
        }
    }

    test("human_skin_metagenome - ips - micro - info") {

        when {
            process {
                """
                input[0] = PYGENPROP_BUILD.out.meda
                """
            }
        }

        then {
            assert process.success
            assertAll(
                { assert snapshot(process.out).match() }
            )
        }

    }

    test("human_skin_metagenome - ips - micro - info - stub") {

        options "-stub"

        when {
            process {
                """
                input[0] = PYGENPROP_BUILD.out.meda
                """
            }
        }

        then {
            assert process.success
            assertAll(
                { assert snapshot(process.out).match() }
            )
        }

    }

}
